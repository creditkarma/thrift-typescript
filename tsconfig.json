{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": true
  },
  "files": [
    "./src/main/index.ts",
    "./src/main/bin/index.ts"
  ],
  "exclude": [
    "node_modules",
    "src/tests",
    "dist"
  ]
}

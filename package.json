{
  "name": "thrift-typescript",
  "version": "0.1.0",
  "description": "Generate TypeScript from Thrift IDL files",
  "main": "./dist/index.js",
  "scripts": {
    "clean": "rimraf coverage/ dist/ node_modules/",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "tslint src/**/*",
    "pretest": "npm run build",
    "test": "npm run lint && npm run test:only --",
    "test:watch": "npm test -- -w",
    "test:only": "NODE_ENV=test mocha --opts mocha.opts",
    "coverage": "NODE_ENV=test nyc mocha --opts mocha.cover.opts"
  },
  "bin": {
    "thrift-typescript": "./dist/bin.js"
  },
  "keywords": [
    "Thrift",
    "TypeScript"
  ],
  "author": "Credit Karma",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/commander": "^2.3.30",
    "@types/handlebars": "^4.0.31",
    "@types/mocha": "^2.2.32",
    "@types/node": "^7.0.22",
    "@types/rimraf": "0.0.28",
    "chai": "^3.5.0",
    "mocha": "^2.5.3",
    "nyc": "^11.1.0",
    "rimraf": "^2.5.4",
    "source-map-support": "^0.4.0",
    "thrift": "^0.10.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.3.2"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "handlebars": "^4.0.5",
    "thrift-parser": "^0.4.2",
    "typescript": "^2.4.2"
  },
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "src/*.test.ts",
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "json"
    ],
    "all": true
  }
}

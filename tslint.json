{
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier",
        "tslint-plugin-prettier"
    ],
    "linterOptions": {
        "exclude": ["src/tests/unit/fixtures/**/*.ts"]
    },
    "rules": {
        "max-classes-per-file": false,
        "prettier": true,
        "no-string-literal": false,
        "variable-name": false,
        "max-line-length": false,
        "jsdoc-format": false,
        "object-literal-sort-keys": false,
        "no-console": false,
        "no-var-requires": false,
        "array-type": [
            true,
            "generic"
        ],
        "semicolon": false,
        "quotemark": false
    }
}
